    "shell:prod": "sst shell --stage production -- bun",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@planetscale/database": "1.19.0",
    "@shopfunnel/resource": "workspace:*",
    "drizzle-orm": "catalog:",
    "luxon": "catalog:",
    "remeda": "catalog:",
    "stripe": "20.1.0",
    "ulid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@tsconfig/node22": "catalog:",
    "@types/luxon": "catalog:",
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "mysql2": "3.16.0",
    "typescript": "catalog:"
  }
}
