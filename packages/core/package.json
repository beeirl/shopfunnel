{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@shopfunnel/core",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "db": "sst shell drizzle-kit",
    "db:dev": "sst shell --stage dev -- drizzle-kit",
    "db:prod": "sst shell --stage production -- drizzle-kit",
